/* Código 2
For & Let
*/ 
document.write('par');
document.write('<br>')

for(let i = 0; i<100; i+=2){
    document.write( i + ',');
    }

document.write('<hr>');

document.write('Impar');
document.write('<br>')

for(let i = 1; i<100; i+=2){
    document.write( i + ',');
}
